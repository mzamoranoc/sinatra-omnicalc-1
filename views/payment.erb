<h1>Calculate Monthly Payment</h1>
<form action="/payment/results" method="get">
  <label for="apr">APR (Annual Percentage Rate):</label>
  <input id="apr" type="number" step="0.01" name="apr" required>

  <label for="years">Number of years remaining:</label>
  <input id="years" type="number" name="years" required>

  <!-- Update label to match "Principal" exactly as required -->
  <label for="present_value">Principal:</label>
  <input id="present_value" type="number" name="present_value" required>

  <button type="submit">Calculate Payment</button>
</form>

